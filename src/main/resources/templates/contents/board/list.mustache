{{>layouts/header}}
<div class="container starter-template" id="inputDiv">
    <h3>웹 프로토타입 게시판</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">번호</th>
                <th scope="col">제목</th>
                <th scope="col">글쓴이</th>
                <th scope="col">작성일</th>
                <th scope="col">조회</th>
            </tr>
        </thead>
        <tbody id="boardList">
            {{#boards}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{authorId}}</td>
                    <td>{{createdDate}}</td>
                    <td>{{viewCnt}}</td>
                </tr>
            {{/boards}}
            {{^boards}}
                <tr>
                    <td colspan="5"><span>등록된 게시물이 없습니다.</span></td>
                </tr>
            {{/boards}}
        </tbody>
    </table>
    <button class="btn btn-dark" type="button" onclick="location.href='/board/insert'">글쓰기</button>
</div>
